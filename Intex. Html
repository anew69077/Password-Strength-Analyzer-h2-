<body>
    <div id="root"></div>

    <script type="text/babel">
        function PasswordChecker() {
            const [password, setPassword] = React.useState('');
            const [analysis, setAnalysis] = React.useState(null);
            const [showResults, setShowResults] = React.useState(false);

            const checkStrength = () => {
                if (!password) return;
                const result = zxcvbn(password);
                setAnalysis({
                    score: result.score,
                    suggestions: result.feedback.suggestions,
                    crackTime: result.crack_times_display.online_no_throttling_10_per_second
                });
                setShowResults(true);
            };

            const handleKeyPress = (e) => {
                if (e.key === 'Enter') checkStrength();
            };

            return (
                <div className="container">
                    <h1 style={{ textAlign: 'center', color: '#333' }}>üîí Password Strength Checker</h1>
                    
                    <div className="password-box">
                        <input
                            type="password"
                            value={password}
                            onChange={(e) => setPassword(e.target.value)}
                            onKeyPress={handleKeyPress}
                            placeholder="Enter your password..."
                        />
                        <button 
                            className="check-button"
                            onClick={checkStrength}
                            disabled={!password}
                        >
                            <span>‚ñ∂</span>
                            Check
                        </button>
                    </div>

                    {showResults && analysis && (
                        <div className="results">
                            <div className="strength-meter">
                                {[1,2,3,4].map(i => (
                                    <div 
                                        key={i}
                                        className={`bar ${i <= analysis.score ? 'active' : ''}`}
                                    />
                                ))}
                            </div>
                            
                            <h3>Security Report:</h3>
                            <p>‚è≥ Estimated crack time: {analysis.crackTime}</p>
                            
                            {analysis.suggestions.length > 0 && (
                                <>
                                    <h4>üí° Improvement Suggestions:</h4>
                                    <ul>
                                        {analysis.suggestions.map((suggestion, i) => (
                                            <li key={i}>{suggestion}</li>
                                        ))}
                                    </ul>
                                </>
                            )}
                        </div>
                    )}
                </div>
            );
        }

        function App() {
            return <PasswordChecker />;
        }

        ReactDOM.createRoot(document.getElementById('root')).render(<App />);
    </script>
</body>
</html>
